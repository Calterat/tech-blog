<section>
  <h2>Create a New Blog</h2>

  <form class="new-blog-form">
    <div>
      <label for="post-title">Title</label>
      <input type="text" id="blog-title" name="blog-title"/>
    </div>
    <div>
      <label for="blog-body">Body</label>
      <textarea id="blog-body" name="blog-body"></textarea>
    </div>
    <button type="submit" class="btn btn-success">Create</button>
  </form>
</section>
{{#if blogs.length}}
<section>
  <h2>Your Posts</h2>
  <ol>
    {{#each blogs as |blog|}}
    <li>
      <ol class="list-group">
        <li class="list-group-item list-group-item-action" aria-current="true">
          <div class="card">
            <h4 class="card-header">{{blog.title}}</h4>
            <div class="card-body">
              <blockquote class="blockquote mb-0">
                <p>{{blog.body}}</p>
                <footer class="blockquote-footer">{{blog.user.username}} <cite title="Source Title">  on  {{blog.created_at}}</cite></footer>
              </blockquote>
            </div>
          </div> 
        </li>
      </ol>
      <a href="/dashboard/edit/{{blog.id}}" class="edit-link">Edit post</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/javascript/add-blog.js"></script>