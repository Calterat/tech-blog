<section>
  <h2 class="text-center">Create a New Blog</h2>
  <form class="new-blog-form d-flex flex-column align-items-center mt-2">
    <div class="d-flex flex-column align-items-center">
      <label for="post-title"><strong>Title</strong></label>
      <input type="text" id="blog-title" name="blog-title"/>
    </div>
    <div class="d-flex flex-column align-items-center mt-2">
      <label for="blog-body"><strong>Body</strong></label>
      <textarea id="blog-body" rows='4' cols='50' name="blog-body"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mt-2">Create</button>
  </form>
</section>
{{#if blogs.length}}
<section class="mt-5">
  <h2 class="text-center">Your Blogs</h2>
  <ol class="list-group">
    {{#each blogs as |blog|}}
    <li class="list-group-item list-group-item-action" aria-current="true">
      <a href="/dashboard/edit/{{blog.id}}" class="edit-link text-decoration-none text-reset">
      <div class="card">
        <h4 class="card-header">{{blog.title}}</h4>
        <div class="card-body">
          <blockquote class="blockquote mb-0">
            <p>{{blog.body}}</p>
            <footer class="blockquote-footer">{{blog.user.username}} <cite title="Source Title">  on  {{blog.created_at}}</cite></footer>
          </blockquote>
        </div>
      </div>
      </a> 
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}
<script src="/javascript/add-blog.js"></script>