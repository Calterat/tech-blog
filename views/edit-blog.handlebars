<article>
  <a href="/dashboard"> &larr; Back to dashboard</a>
  <h2 class="text-center">Edit Blog</h2>
  <form class="edit-blog-form d-flex flex-column align-items-center mt-2">
    <div class="d-flex flex-column align-items-center">
      <label for="blog-title"><strong>Title</strong></label>
      <input name="blog-title" type="text" value="{{blog.title}}" />
    </div>
    <div class="d-flex flex-column align-items-center mt-2">
      <label for="blog-body"><strong>Body</strong></label>
      <textarea id="blog-body" name="blog-body" rows='4' cols='50'>{{blog.body}}</textarea>
    </div>
    <div class="mt-2">
      <button type="submit" class="btn btn-primary m-2">Save blog</button>
      <button type="button" class="delete-blog-btn btn btn-danger m-2">Delete blog</button>
    </div>
  </form>
</article>
<script src="/javascript/edit-blog.js"></script>
<script src="/javascript/delete-blog.js"></script>
